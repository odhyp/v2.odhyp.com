---
import PageArticle from "../../layouts/PageArticle.astro";

import { type CollectionEntry, getCollection, render } from "astro:content";
import type { MarkdownHeading } from "astro";

export async function getStaticPaths() {
    const articles = await getCollection("articles");

    const headings = await Promise.all(
        articles.map(async (article) => {
            const data = await render(article);
            return data.headings;
        })
    );

    return articles.map((article, index) => ({
        params: { id: article.id },
        props: { article, headings: headings[index] },
    }));
}

type Props = {
    article: CollectionEntry<"articles">;
    headings: MarkdownHeading[];
};

const { article, headings } = Astro.props;
const { Content } = await render(article);
---

<PageArticle frontmatter={article.data} headings={headings}>
    <Content />
</PageArticle>
