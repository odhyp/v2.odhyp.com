---
// layout import
import BaseLayout from "../layouts/BaseLayout.astro";

// component import
import Giscus from "../components/page/Giscus.astro";

const {
    title = "Feedback",
    description = "Help me improve this site by sharing your feedback.",
} = Astro.props;
---

<BaseLayout title={title} description={description}>
    <section class="container-grid">
        <section class="container-side"></section>

        <section class="container-main">
            <article>
                <h1>
                    {title}<span class="text-red-800">.</span>
                </h1>
                <span class="font-medium text-neutral-500 italic">
                    {description}
                </span>
            </article>

            <Giscus />
        </section>

        <section class="container-side"></section>
    </section>
</BaseLayout>
