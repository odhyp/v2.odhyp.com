---
// layout import
import BaseLayout from "../../layouts/BaseLayout.astro";

// component import
import CardPost from "../../components/ui/CardPost.astro";

import { getCollection } from "astro:content";

let notes = await getCollection("notes", ({ data }) => {
    if (import.meta.env.DEV) {
        return true;
    }
    return data.draft !== true;
});

notes = notes.sort(
    (a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf()
);

const {
    title = "Notes",
    description = "Short snippets, references, and quick ideas that serve as a lightweight archive",
} = Astro.props;
---

<BaseLayout title={title} description={description}>
    <section class="container-grid">
        <section class="container-side"></section>

        <section class="container-main">
            <article>
                <h1>
                    {title}<span class="text-red-800">.</span>
                </h1>
                <p>
                    Short snippets, references, and quick ideas that serve as a
                    lightweight archive.
                </p>
            </article>

            <div class="@container flex flex-col gap-y-2">
                {
                    notes.map((note) => (
                        <CardPost post={note} collection="notes" />
                    ))
                }
            </div>
        </section>

        <section class="container-side"></section>
    </section>
</BaseLayout>
