---
// layout import
import BaseLayout from "../../layouts/BaseLayout.astro";

// component import
import CardWriting from "../../components/ui/CardWriting.astro";

import { getCollection } from "astro:content";

let writings = await getCollection("writings", ({ data }) => {
    if (import.meta.env.DEV) {
        return true;
    }
    return data.draft !== true;
});

writings = writings.sort(
    (a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf()
);

const {
    title = "Writings",
    description = "Thoughts and reflections on what I build, the concepts I explore, and the lessons I keep discovering across development, design, finance, and life.",
} = Astro.props;
---

<BaseLayout title={title} description={description}>
    <section class="container-grid">
        <section class="container-side"></section>

        <section class="container-main">
            <article>
                <h1>Writings<span class="text-red">.</span></h1>
                <p class="text-tx-2">{description}</p>
            </article>

            <div class="@container mt-8 flex flex-col gap-y-2">
                {
                    writings.map((writing) => (
                        <CardWriting post={writing} collection="writings" />
                    ))
                }
            </div>
        </section>

        <section class="container-side"></section>
    </section>
</BaseLayout>
