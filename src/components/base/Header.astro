<header
    id="header"
    class="container-full bg-bg transition-color border-b-ui/0 sticky top-0 z-50 h-16 border-b font-medium duration-200 ease-in-out"
>
    <section class="flex h-full items-center justify-between">
        <!-- LOGO -->
        <a href="/" class="">
            <img src="/images/logo.png" alt="Logo" class="size-10" />
        </a>

        <!-- DESKTOP MENU -->
        <nav class="flex items-center gap-x-12 font-medium">
            <a href="/writings">Writings</a>
            <a href="/projects">Projects</a>
            <a href="/now">Now</a>
            <a href="/about">About</a>
        </nav>
    </section>
</header>

<script is:inline>
    document.addEventListener("astro:page-load", () => {
        const header = document.getElementById("header");

        window.addEventListener("scroll", () => {
            if (window.scrollY > 80) {
                header.classList.add("border-b-ui/100");
            } else {
                header.classList.remove("border-b-ui/100");
            }
        });
    });
</script>
